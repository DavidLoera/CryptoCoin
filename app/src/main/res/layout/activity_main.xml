<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".MainActivity">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escoge la criptomoneda"
                        android:fontFamily="@font/opensansbold"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        android:layout_margin="20dp"/>

                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:rowCount="4"
                        android:columnCount="2"
                        android:layout_margin="5dp"
                        android:alignmentMode="alignMargins"
                        android:layout_gravity="center_horizontal"
                        android:columnOrderPreserved="false">

                        <androidx.cardview.widget.CardView android:id="@+id/radios"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/gray"
                        android:layout_margin="10dp">
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/bitcoin"
                                                android:layout_marginTop="12dp"
                                                />
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Bitcoin"
                                                android:fontFamily="@font/opensansbold"
                                                android:textSize="16dp"
                                                android:textColor="@color/white"
                                                android:layout_marginTop="20dp"/>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView android:id="@+id/ampli"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardBackgroundColor="@color/gray"
                                android:layout_margin="10dp">
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/ether"
                                                android:layout_marginTop="12dp"
                                        />
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Ethereum"
                                                android:fontFamily="@font/opensansbold"
                                                android:textSize="16dp"
                                                android:textColor="@color/white"
                                                android:layout_marginTop="20dp"/>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView android:id="@+id/antena"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardBackgroundColor="@color/gray"
                                android:layout_margin="10dp">
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/xrp2"
                                                android:layout_marginTop="12dp"
                                        />
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Ripple XRP"
                                                android:fontFamily="@font/opensansbold"
                                                android:textSize="16dp"
                                                android:textColor="@color/white"
                                                android:layout_marginTop="20dp"/>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView android:id="@+id/accesorio"
                                android:layout_width="170dp"
                                android:layout_height="170dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp"
                                app:cardBackgroundColor="@color/gray"
                                android:layout_margin="10dp">
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:src="@drawable/litecoin"
                                                android:layout_marginTop="12dp"
                                        />
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Litecoin"
                                                android:fontFamily="@font/opensansbold"
                                                android:textSize="16dp"
                                                android:textColor="@color/white"
                                                android:layout_marginTop="20dp"/>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>

                </GridLayout>


        </LinearLayout>




</ScrollView>